<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transfer_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transfer_item_background"
    android:paddingStart="16dp"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/tv_concept_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textSize="22sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@id/tv_amount_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/cities" />

    <TextView
        android:id="@+id/tv_amount_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/eczar_regular"
        android:textSize="22sp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_concept_item"
        tools:text="@tools:sample/cities" />

</androidx.constraintlayout.widget.ConstraintLayout>